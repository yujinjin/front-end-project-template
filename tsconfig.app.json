{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        // 解析非相对模块名的基准目录
        "baseUrl": ".",

        /* Linting */
        "strict": true,
        // 跳过所有库文件的类型检查
        // "skipLibCheck": true,
        // 允许编译JavaScript文件
        // "allowJs": true,
        // 有未使用的变量时，抛出错误
        "noUnusedLocals": true,
        // 有未使用的参数时，不抛出错误
        "noUnusedParameters": false,
        // "erasableSyntaxOnly": true,
        // 报告 switch 语句的 fallthrough 错误。（即，不允许 switch 的 case 语句贯穿）
        "noFallthroughCasesInSwitch": true,
        // 检查副作用导入
        "noUncheckedSideEffectImports": true,

        /* Bundler mode */
        // // 决定如何处理模块
        // "moduleResolution": "bundler",
        // "allowImportingTsExtensions": true,
        // // 该属性要求所有文件都是 ES Module 模块
        // "isolatedModules": true,
        // "moduleDetection": "force",
        // // 不生成输出文件
        // "noEmit": true,
        // // 在 .tsx文件里支持JSX： "React"或 "Preserve"
        // "jsx": "preserve",
        "types": ["node", "element-plus/global", "@yujinjin/utils/types/index.d.ts"],
        "paths": {
            "@/*": ["src/*"],
            "@views/*": ["src/views/*"],
            "@components/*": ["src/components/*"],
            "@style/*": ["src/assets/style/*"],
            "@imgs/*": ["src/assets/images/*"],
            "@api/*": ["src/api/*"],
            "/#/*": ["types/*"]
        } // 模块名到基于 baseUrl的路径映射的列表
    },
    "include": ["types/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"],
    "exclude": ["node_modules", "dist", "**/*.js"]
}
