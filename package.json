{
    "name": "{{projectName}}",
    "description": "{{projectDescription}}",
    "author": "{{projectAuthor}}",
    "type": "module",
    "scripts": {
        "mdev": "cross-env MOCK_DATA=1 vite --mode dev",
        "dev": "vite --mode dev",
        "build": "vite build",
        "preview": "vite preview",
        "format": "prettier --write \"**/*.{js,cjs,mjs,ts,tsx,json,css,scss,vue,html,md}\"",
        "lint": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "dependencies": {
        "vue": "^3.5.18",
        "pinia": "^3.0.3",
        "vue-router": "^4.5.1",
        "axios": "^1.11.0",
        "@vueuse/core": "^13.6.0",
        "element-plus": "^2.10.6",
        "@element-plus/icons-vue": "^2.3.2",
        "mockjs": "^1.1.0",
        "cropperjs": "^1.5.13",
        "quill": "^2.0.3"
    },
    "devDependencies": {
        "vite": "^7.1.2",
        "vitest": "^3.2.4",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vitejs/plugin-vue-jsx": "^5.0.1",
        "vite-svg-loader": "^5.1.0",
        "sass": "1.90.0",
        "prettier": "^3.6.2",
        "globals": "^16.3.0",
        "eslint": "^9.33.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-vue": "^10.4.0",
        "eslint-plugin-jsonc": "^2.20.1",
        "eslint-plugin-markdown": "^5.1.0",
        "eslint-plugin-vitest": "^0.5.4",
        "@vue/eslint-config-prettier": "^10.2.0",
        "fast-glob": "^3.3.3",
        "cross-env": "^10.0.0"
    },
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "jsxBracketSameLine": false,
        "printWidth": 200,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "semi": true,
        "singleQuote": false,
        "htmlWhitespaceSensitivity": "ignore",
        "bracketSpacing": true,
        "endOfLine": "crlf"
    },
    "engines": {
        "node": ">=22"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "not dead"
    ]
